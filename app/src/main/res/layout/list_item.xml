<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="50dp"
        android:stretchColumns="1,2,3">

    <TableRow
        android:padding="10dp">

        <TextView
            android:id="@+id/account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="435"
            android:minWidth="40dp"
            android:fontFamily="@font/quicksand_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ATR Equipments"
            android:maxWidth="100dp"
            android:paddingStart="5dp"
            android:paddingEnd="1dp"
            android:fontFamily="@font/quicksand_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.0"
            android:minWidth="40dp"
            android:fontFamily="@font/quicksand_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_column="1"
            android:layout_marginEnd="20dp"/>

    </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/delete_row"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/delete_icon"
        app:layout_constraintTop_toTopOf="@id/table"
        app:layout_constraintBottom_toBottomOf="@id/table"
        app:layout_constraintStart_toEndOf="@id/table"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/table"
        app:layout_constraintStart_toStartOf="@id/table"
        app:layout_constraintEnd_toEndOf="@id/table"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/light_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>